<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">	
    <appender name="JOBREPORTING_CONSOLE" class="org.apache.log4j.ConsoleAppender">		
	<layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %c(%L)- %m%n"/>
	</layout>		
    </appender>
    	
    <appender name="JOBREPORTING_FILE" class="org.apache.log4j.RollingFileAppender">
	<param name="File" value="/opt/bitnami/apache-tomcat/logs/logitravel/log.txt"/>		
	<param name="MaxFileSize" value="2500KB"/>
	<param name="MaxBackupIndex" value="25"/>
	<param name="Append" value="true"/>		
	<layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %c(%L)- %m%n"/>
	</layout>
    </appender>
	
    <root>	
	<appender-ref ref="JOBREPORTING_FILE"/>   
	<appender-ref ref="JOBREPORTING_CONSOLE"/>
    </root>	
</log4j:configuration>

